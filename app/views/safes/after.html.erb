<%#= f.submit "登録", class: "btn btn-primary", data: { disable_with: "登録中...", confirm: '本当に登録しますか？' } %>
<%# end %>

</div>
</div>
<%#= link_to "出庫する", safe_path(safe), :class => "btn btn-primary big_botton" %>
<%#= link_to '出庫する', safe_path(safe), method: :put, :class => "btn btn-primary big_botton" %>
<%= link_to "出庫する", edit_safe_path(safe), :class => "btn btn-primary big_botton" %>
<br>
<% end %>
</div>
