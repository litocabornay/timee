<% provide(:title,"log in") %>

 <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<!--   <link rel="stylesheet" type="text/css" href="css/style.css">-->   
<div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6">
      <%= form_for(:session, url: login_path) do |f| %>            
                <fieldset>
                <h2>ログインページ</h2>
                <hr class="colorgraph">
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', :placeholder =>'ログイン用メールアドレス' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', :placeholder => 'パスワード' %>
                </div>
                <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>ログイン状態を保存する</span>
                <% end %>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-5 col-sm-5 col-md-5 center-block">
                    <%= f.submit "ログイン", class: "btn btn-primary btn-lg btn-block" %>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<% end %>