</p>

<div class="center padding2" style="width:100%;">
<%#= paginate @safes %>
</div>
    <div class="width_container">
    <div class="col-md-8 ">
      <!--セル情報の一覧のフォーム(並び替え可能)-->
<div class="width_table">
<table class="table font-small sampleTable small-zoom">
  <thead class="thead-inverse">
    <tr scope="row">

      <th width="120">ID<%#= sortable "id", "ID" %></th>
      <th width="200">開始日時<%#= sortable "create_at", "開始日時" %></th>
      <th width="200">アーカイブ<%#= sortable "archive", "アーカイブ" %></th>
      <th width="100">状況<%#= sortable "status", "状況" %></th>
      <th width="200">販売者様<%#= sortable "seller_id", "売り手" %></th>
      <th width="200">購入者様<%#= sortable "buyer_id", "買い手" %></th>
      <th width="200">到着予定日<%#= sortable "date_of_arrive", "到着予定日" %></th>
      <th width="200">確定価格<%#= sortable "confirm_price", "確定価格(全込)" %></th>
      <th width="200">検品納期<%#= sortable "limit_of_inspection", "検品納期" %></th>

      
      <th colspan="1" width="100"></th>
      
    </tr>
  </thead>
  <tbody>
    
   <% @buyer_one_safes.each do |safe| %>
   <%# if safe.buyer_id == @current_user %>
   <% if safe.buyer_id == @user.id %>
   
      <tr scope="row">
       
        <td><%= safe.id %></td>
        <td><%= safe.created_at.strftime("%m/%d") %></td>
        <td><%= safe.archive %></td>
        <td><%= safe.status %></td>
        <td><%= safe.seller_id %></td>
        <td><%= safe.buyer_id %></td>
        <td><%= safe.date_of_arrive %></td>
        <td><%= safe.confirm_price %></td>
        <td><%= safe.limit_of_inspection %></td>

 
        
        <td class="red zoom15"><%= link_to 'ＯＫ', edit_safe_path(safe) %></td>
     
      
      </tr>
    <% end %>
    <% end %>
    
 </tbody>
</table>
</div>

    </div>
 </div>
