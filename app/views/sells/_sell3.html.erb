<!--セル情報の一覧のフォーム(並び替え可能)-->
<div class="width_table">
<table class="table font-small sampleTable small-zoom">
  <thead class="thead-inverse">
    <tr scope="row">
      <!--<th width="60">投稿者</th>-->
      <!--<th>ユーザーの会社名前</th>-->
    
      <th colspan="1" width="100"></th>
      
      <th width="120" class="smart"><%= sortable "created_at", "更新日" %></th>
      <th width="100" class="smart"><%= sortable "status", "状況" %></th>
      <th width="150" class="smart"><%= sortable "place", "前設置" %></th>
      <th width="400" class="smart"><%= sortable "type_machine", "種別" %></th>

      <th width="280"><%= sortable "name", "物件名" %></th>
      <th width="80"><%= sortable "number", "数量" %></th>
      <th width="150"><%= sortable "price", "価格" %></th>
      <th width="150" class="smart smart2"><%= sortable "removal_date", "撤去日" %></th>

      <th width="200" class="smart smart2"><%= sortable "remarks", "備考" %></th>
      
      <th colspan="1" width="100" class="smart smart2"></th>

      
    </tr>
  </thead>
  <tbody>
   <% @sells.each do |sell| %>
<% if sell.status == "受付" or sell.status == "受付中" or @all == "all" %>
   
      <tr scope="row">
        
      <td class="red zoom15">
      <% if sell.user_id == current_user.id %> 
        <b><%= link_to '編集', edit_extra_sells_path(sell) %></b>
      <% else %> 
        <b><%= link_to '詳細', show_sells_path(sell) %></b>
      <% end %>
      </td>
      
        <td class="smart"><%= sell.created_at.strftime("%m/%d").truncate(20) %></td>
        <td class="smart"><%= sell.status.truncate(20) %></td>
        <td class="smart"><%= sell.place.truncate(20) %></td>
        <td class="smart"><%= sell.type_machine.truncate(20) %></td>
        <!--<td><%#= sell.maker %></td>-->
        <td><%= sell.name.truncate(20) %></td>
        <td><%= sell.number %></td>
        <td><%= sell.price.to_s(:delimited).truncate(20) %>円</td>
        <td class="smart smart2"><%= sell.removal_date.truncate(20) %></td>
        <!--<td><%#= sell.remnant %></td>-->
        <!--<td><#%= sell.stage %></td>-->
        <!--<td><%#= sell.condition %></td>-->
        <td class="smart smart2"><%= sell.remarks.truncate(20) %></td>
        
     
      <td class="red zoom15 smart smart2">
      <% if sell.user_id == current_user.id %> 
        <b><%= link_to '編集', edit_extra_sells_path(sell) %></b>
      <% else %> 
        <b><%= link_to '詳細', show_sells_path(sell) %></b>
      <% end %>
      </td>

      
      </tr>
      
      
<% end %>
    <% end %>
    
 </tbody>
</table>
</div>
